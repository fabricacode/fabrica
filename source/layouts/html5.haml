!!!5
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
%html.no-js
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    = javascript_include_tag "vendor/html5shiv/dist/html5shiv"
    -# To set titles and descriptions globally and for each individual page, see /DOCS.md
    %title= page_title
    %meta{:content => page_description, :name => "description"}
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}
    %meta{:content => "yes", :name =>"apple-mobile-web-app-capable"}
    %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}
    
    %meta{:property=>"og:title", :content=>"Fabrica"}
    %meta{:property=>"og:type", :content=>"website"}
    %meta{:property=>"og:url", :content=>"http://fabricacode.github.com"}
    %meta{:property=>"og:image", :content=>"http://fabricacode.github.com/images/fabrica_fb.png"}
    %meta{:property=>"og:site_name", :content=>"Fabrica"}
    %meta{:property=>"og:description", :content=>"Applied Arts Center"}
    %meta{:property=>"fb:app_id", :content=>"351002218351232"}
   
    
    <!-- Favicons and touch icons -->
    <!-- For retina-display iPads -->
    %link{ :href=>"apple-touch-icon-144x144-precomposed.png", :rel=>"apple-touch-icon-precomposed", :sizes=>"144x144", :type=>"image/png" }
    <!-- For retina-display iPhones -->
    %link{ :href=>"apple-touch-icon-144x144-precomposed.png", :rel=>"apple-touch-icon-precomposed", :sizes=>"114x114", :type=>"image/png" }
    <!-- For iPad 1 -->
    %link{ :href=>"apple-touch-icon-72x72-precomposed.png", :rel=>"apple-touch-icon-precomposed", :sizes=>"72x72", :type=>"image/png" }
    <!-- For iPhone 3G, iPod Touch and Android -->
    %link{ :href=>"apple-touch-icon-57x57-precomposed.png", :rel=>"apple-touch-icon-precomposed", :type=>"image/png" }
    <!-- For Nokia -->
    %link{ :href=>"apple-touch-icon-original.png", :rel=>"shortcut icon" }
    <!-- For everything else -->
    %link{ :href=>"favicon.png", :rel=>"shortcut icon", :type=>"image/png" }
    %link{ :href=>"favicon.ico", :rel=>"shortcut icon", :type=>"image/x-icon" }
    
    = javascript_include_tag "vendor/Modernizr"
    = stylesheet_link_tag "bootstrap.min"
    = stylesheet_link_tag "bigvideo"
    = stylesheet_link_tag "site"
    
  %body{:"data-spy"=>"scroll", :"data-offset"=> "50"}
   
    #fb-root
    %script
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/it_IT/all.js#xfbml=1&appId=164379667045352";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    %header
    %div{:role => "main", :id => "container"}= yield
    %footer
    
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"
    :javascript
      window.jQuery || document.write('<script src="javascripts/vendor/jquery.js"><\/script>')
    = javascript_include_tag "bootstrap.min"
    = javascript_include_tag "vendor/BigVideo/js/jquery-ui-1.8.22.custom.min.js"
    %script{:src=>"http://vjs.zencdn.net/c/video.js"}
    = javascript_include_tag "vendor/BigVideo/js/jquery.imagesloaded.min.js"
    = javascript_include_tag "vendor/BigVideo/js/bigvideo.js"
    = javascript_include_tag "site"